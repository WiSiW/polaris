<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.polaris.dao.BlogMapper">
    <select id="listBlog" parameterType="int" resultType="com.example.polaris.pojo.Blog">
	   select * from book
	</select>
    <select id="getBlogById" parameterType="String" resultType="com.example.polaris.pojo.Blog">
	   select * from book where b_id = #{b_id}
	</select>
</mapper>